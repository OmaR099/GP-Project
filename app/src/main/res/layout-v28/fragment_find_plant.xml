<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <View
        android:id="@+id/top_View"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/find_plant_shape_gradient"
        app:layout_constraintDimensionRatio="375:240"
        app:layout_constraintTop_toTopOf="0" />

    <View
        android:id="@+id/bottom_View"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="0"
        app:layout_constraintTop_toBottomOf="@+id/top_View" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x32"
            android:layout_marginTop="@dimen/x40"
            android:text="@string/find_plant"
            android:textColor="@color/color_0f4d2e"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="0"
            app:layout_constraintTop_toTopOf="0" />

        <TextView
            android:id="@+id/notice_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x32"
            android:layout_marginTop="@dimen/x2"
            android:layout_marginEnd="@dimen/x32"
            android:lineHeight="@dimen/x36"
            android:text="@string/findplant3_new"
            android:textColor="@color/color_62857a"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/title_tv"
            app:layout_constraintTop_toBottomOf="@+id/title_tv" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_search_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x32"
            android:layout_marginTop="@dimen/x32"
            android:layout_marginEnd="@dimen/x32"
            android:background="@drawable/shape_solid_fefffe_r_25"
            android:elevation="@dimen/x10"
            android:outlineSpotShadowColor="@color/colorShadow"
            app:layout_constraintEnd_toEndOf="0"
            app:layout_constraintStart_toStartOf="0"
            app:layout_constraintTop_toBottomOf="@+id/notice_tv">

            <TextView
                android:id="@+id/search_et"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y100"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/x40"
                android:paddingEnd="@dimen/x100"
                android:text="@string/search_bar"
                android:textColor="@color/color_999999"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="0"
                app:layout_constraintStart_toStartOf="0"
                app:layout_constraintTop_toTopOf="0" />

            <LinearLayout
                android:id="@+id/search_btn_ll"
                android:layout_width="@dimen/x84"
                android:layout_height="@dimen/x84"
                android:layout_marginEnd="@dimen/x8"
                android:background="@drawable/shape_search_btn_bg"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="0"
                app:layout_constraintEnd_toEndOf="0"
                app:layout_constraintTop_toTopOf="0">

                <ImageView
                    android:layout_width="@dimen/x40"
                    android:layout_height="@dimen/x40"
                    android:src="@drawable/icon_top_search" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_category_list"
            android:layout_width="0dp"
            android:layout_height="@dimen/x140"
            android:layout_marginStart="@dimen/x32"
            android:layout_marginEnd="@dimen/x32"
            android:layout_marginBottom="@dimen/x24"
            android:background="@drawable/bg_category_item"
            app:layout_constraintBottom_toBottomOf="0"
            app:layout_constraintEnd_toEndOf="0"
            app:layout_constraintStart_toStartOf="0">

            <ImageView
                android:id="@+id/category_item_arrow"
                android:layout_width="@dimen/x48"
                android:layout_height="@dimen/x48"
                android:layout_marginEnd="@dimen/x12"
                android:background="@drawable/icon_common_arrow_24"
                app:layout_constraintBottom_toBottomOf="0"
                app:layout_constraintEnd_toEndOf="0"
                app:layout_constraintTop_toTopOf="0" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/container_img_list"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_constraintEnd_toStartOf="@+id/category_item_arrow">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="@dimen/x88"
                    android:layout_height="@dimen/x88"
                    app:layout_constraintBottom_toBottomOf="0"
                    app:layout_constraintStart_toStartOf="0"
                    app:layout_constraintTop_toTopOf="0">

                    <ImageView
                        android:id="@+id/img_1"
                        android:layout_width="@dimen/x80"
                        android:layout_height="@dimen/x80"
                        android:src="@drawable/icon_find_plants_category_1"
                        app:layout_constraintBottom_toBottomOf="0"
                        app:layout_constraintEnd_toEndOf="0"
                        app:layout_constraintStart_toStartOf="0"
                        app:layout_constraintTop_toTopOf="0" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="@dimen/x88"
                    android:layout_height="@dimen/x88"
                    android:layout_marginStart="@dimen/x60"
                    android:background="@drawable/bg_find_plant_category_item"
                    app:layout_constraintBottom_toBottomOf="0"
                    app:layout_constraintStart_toStartOf="0"
                    app:layout_constraintTop_toTopOf="0">

                    <ImageView
                        android:id="@+id/img_2"
                        android:layout_width="@dimen/x80"
                        android:layout_height="@dimen/x80"
                        android:src="@drawable/icon_find_plants_category_2"
                        app:layout_constraintBottom_toBottomOf="0"
                        app:layout_constraintEnd_toEndOf="0"
                        app:layout_constraintStart_toStartOf="0"
                        app:layout_constraintTop_toTopOf="0" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="@dimen/x88"
                    android:layout_height="@dimen/x88"
                    android:layout_marginStart="@dimen/x120"
                    android:background="@drawable/bg_find_plant_category_item"
                    app:layout_constraintBottom_toBottomOf="0"
                    app:layout_constraintStart_toStartOf="0"
                    app:layout_constraintTop_toTopOf="0">

                    <ImageView
                        android:id="@+id/img_3"
                        android:layout_width="@dimen/x80"
                        android:layout_height="@dimen/x80"
                        android:src="@drawable/icon_find_plants_category_3"
                        app:layout_constraintBottom_toBottomOf="0"
                        app:layout_constraintEnd_toEndOf="0"
                        app:layout_constraintStart_toStartOf="0"
                        app:layout_constraintTop_toTopOf="0" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/x24"
                android:layout_marginEnd="@dimen/x24"
                android:ellipsize="end"
                android:gravity="start"
                android:maxLines="2"
                android:text="@string/findplant1_new"
                android:textColor="@color/color_333333"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="0"
                app:layout_constraintEnd_toStartOf="@+id/container_img_list"
                app:layout_constraintStart_toStartOf="0"
                app:layout_constraintTop_toTopOf="0" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/icon_take_photo"
            android:layout_width="@dimen/x324"
            android:layout_height="@dimen/x324"
            android:src="@drawable/icon_find_plants_take_photo"
            app:layout_constraintBottom_toTopOf="@+id/container_category_list"
            app:layout_constraintEnd_toEndOf="0"
            app:layout_constraintStart_toStartOf="0"
            app:layout_constraintTop_toBottomOf="@+id/container_search_item" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PopupTheme" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:layout_marginEnd">2dp</item>
    </style>

    <style name="LightProgressBarScale" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:progressDrawable">@drawable/shape_light_progress_1</item>
    </style>

    <style name="NPText32" parent="@style/NPText">
        <item name="android:textSize">@dimen/x32</item>
    </style>
    <style name="NPText" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MyPlantsTabLayoutTextAppearance" parent="">
        <item name="android:textSize">@dimen/x36</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#51655a</item>
        <item name="textAllCaps">false</item>
    </style>
    
    <style name="roundimageview" parent="">

        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_10sdp</item>
        <item name="color">@color/white</item>


    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ThemeOverlay.search" parent="AppTheme">

        <!-- Text color -->
        <item name="android:editTextColor">@color/black</item>
        <!-- Hint text color -->
        <item name="android:textColorHint">@color/color_519071</item>

    </style>

    <style name="nightModeSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/night_mode</item>
        <item name="colorSwitchThumbNormal">@color/white</item>
        <item name="android:colorForeground">#99FFFFFF</item>
    </style>
    <style name="notification" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/notifications</item>
        <item name="colorSwitchThumbNormal">@color/white</item>
        <item name="android:colorForeground">#99FFFFFF</item>
    </style>
    <style name="privateAccount" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/privet_account</item>
        <item name="colorSwitchThumbNormal">@color/white</item>
        <item name="android:colorForeground">#99FFFFFF</item>
    </style>
</resources>
<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PopupTheme" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:layout_marginEnd">2dp</item>
    </style>

    <style name="LightProgressBarScale" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:progressDrawable">@drawable/shape_light_progress_1</item>
    </style>

    <style name="NPText32" parent="@style/NPText">
        <item name="android:textSize">@dimen/x32</item>
    </style>
    <style name="NPText" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MyPlantsTabLayoutTextAppearance" parent="">
        <item name="android:textSize">@dimen/x36</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#51655a</item>
        <item name="textAllCaps">false</item>
    </style>
    
    <style name="roundimageview" parent="">

        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSizeBottomLeft">@dimen/x30</item>
        <item name="cornerSizeBottomRight">@dimen/x30</item>
        <item name="color">@color/white</item>

    </style>
</resources>
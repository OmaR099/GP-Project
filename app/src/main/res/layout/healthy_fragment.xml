<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:tag="layout/fragment_diagnose_plant_0">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ebf5f0">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="exitUntilCollapsed|scroll">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_plant_info"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x546" />

                <ImageView
                    android:id="@+id/img_plant_disease_img_small"
                    android:layout_width="@dimen/x176"
                    android:layout_height="@dimen/x176"
                    android:layout_marginStart="@dimen/x32"
                    android:layout_marginTop="@dimen/x268"
                    android:scaleType="fitXY" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x484"
                    android:background="@drawable/bg_diagnose_top"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/diagnose_result_top"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/x40"
                        android:layout_marginTop="@dimen/x40"
                        android:layout_marginEnd="@dimen/x40"
                        android:background="@drawable/bg_diagnose_health"
                        android:padding="@dimen/x26">

                        <ImageView
                            android:id="@+id/img_diagnose_result"
                            android:layout_width="@dimen/x128"
                            android:layout_height="@dimen/x128"
                            android:src="@drawable/icon_diagnose_health"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/x32"
                            android:orientation="vertical"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/img_diagnose_result"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:id="@+id/text_diagnose"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/healthresult_healthstatus_text_lookshealthy"
                                android:textColor="@color/white"
                                android:textSize="@dimen/x40" />

                            <TextView
                                android:id="@+id/text_diagnose_desc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/x16"
                                android:text="@string/healthresult_healthstatus_text_noproblem"
                                android:textColor="@color/white"
                                android:textSize="@dimen/x28" />
                        </LinearLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/law_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/x40"
                        android:layout_marginTop="@dimen/x32"
                        android:layout_marginEnd="@dimen/x40"
                        android:paddingBottom="@dimen/x60"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/x24" />
                </LinearLayout>
            </FrameLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/title_container_collapsed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0"
                android:background="@color/white"
                android:elevation="@dimen/x10"
                android:orientation="horizontal"
                app:layout_collapseMode="pin">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x88"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <ImageView
                        android:id="@+id/back_collapsed"
                        android:layout_width="@dimen/x48"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/x32"
                        android:adjustViewBounds="true"
                        android:src="@drawable/back_collapsed_icon"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/title_container"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x88">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="@dimen/x64"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/x32"
                    android:adjustViewBounds="true"
                    android:src="@drawable/back_icon"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/menu"
                    android:layout_width="@dimen/x64"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/x32"
                    android:layout_marginEnd="@dimen/x32"
                    android:adjustViewBounds="true"
                    android:src="@drawable/menu_icon"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.appbar.CollapsingToolbarLayout>

        <HorizontalScrollView
            android:id="@+id/info_indicator"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x88"
            android:scrollbars="none"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/container_indicator_common"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/x32"
                android:paddingEnd="@dimen/x32"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/indicator_diseases_info"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/x64"
                    android:background="@drawable/bg_plant_detail_indicator_selected"
                    android:gravity="center"
                    android:paddingStart="@dimen/x28"
                    android:paddingEnd="@dimen/x28"
                    android:text="@string/healthresult_tab_text_info"
                    android:textColor="@color/color_39bf7c"
                    android:textSize="@dimen/x32" />

                <TextView
                    android:id="@+id/indicator_solutions"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/x64"
                    android:gravity="center"
                    android:paddingStart="@dimen/x28"
                    android:paddingEnd="@dimen/x28"
                    android:text="@string/healthresult_tab_text_solutions"
                    android:textColor="@color/color_519071"
                    android:textSize="@dimen/x32" />

                <TextView
                    android:id="@+id/indicator_prevention"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/x64"
                    android:gravity="center"
                    android:paddingStart="@dimen/x28"
                    android:paddingEnd="@dimen/x28"
                    android:text="@string/healthresult_tab_text_prevention"
                    android:textColor="@color/color_519071"
                    android:textSize="@dimen/x32" />
            </LinearLayout>
        </HorizontalScrollView>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_ebf5f0"
        android:fillViewport="true"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/btn_retake"
                android:layout_width="@dimen/x560"
                android:layout_height="@dimen/x88"
                android:layout_marginTop="@dimen/x250"
                android:background="@drawable/bg_diagnose_retake_btn"
                android:gravity="center"
                android:text="@string/healthresult_text_retake"
                android:textColor="@color/white"
                android:textSize="@dimen/x32"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/container_disease_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/x32"
                android:layout_marginEnd="@dimen/x32"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tag_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x40"
                        android:text="@string/healthresult_tab_text_info"
                        android:textColor="@color/black"
                        android:textSize="@dimen/x48"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/container_info_overview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x32"
                        android:background="@drawable/bg_diagnose_content_item"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/x32"
                        android:paddingTop="@dimen/x40"
                        android:paddingEnd="@dimen/x32"
                        android:paddingBottom="@dimen/x40">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/x48"
                                android:layout_height="@dimen/x48"
                                android:src="@drawable/icon_info_overview" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/x16"
                                android:text="@string/healthresult_diseasesinfo_text_overview"
                                android:textColor="@color/black"
                                android:textSize="@dimen/x36"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/disease_overview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/x32"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/container_info_symptom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x32"
                        android:background="@drawable/bg_diagnose_content_item"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/x32"
                        android:paddingTop="@dimen/x40"
                        android:paddingEnd="@dimen/x32"
                        android:paddingBottom="@dimen/x40">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/x48"
                                android:layout_height="@dimen/x48"
                                android:src="@drawable/icon_info_symptom" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/x16"
                                android:text="@string/healthresult_diseasesinfo_text_symptom"
                                android:textColor="@color/black"
                                android:textSize="@dimen/x36"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/disease_symptom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/x32"
                            android:textColor="@color/black" />

                        <ImageView
                            android:id="@+id/img_info_symptom"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/x356"
                            android:layout_marginTop="@dimen/x32"
                            android:scaleType="fitXY" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/container_info_cause"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x32"
                        android:background="@drawable/bg_diagnose_content_item"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/x32"
                        android:paddingTop="@dimen/x40"
                        android:paddingEnd="@dimen/x32"
                        android:paddingBottom="@dimen/x40">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/x48"
                                android:layout_height="@dimen/x48"
                                android:src="@drawable/icon_info_cause" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/x16"
                                android:text="@string/healthresult_diseasesinfo_text_cause"
                                android:textColor="@color/black"
                                android:textSize="@dimen/x36"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/disease_cause"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/x32"
                            android:textColor="@color/black" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/container_solutions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x40"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tag_solutions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/healthresult_tab_text_solutions"
                        android:textColor="@color/black"
                        android:textSize="@dimen/x48"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_solutions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x40"
                        android:background="@drawable/bg_diagnose_content_item"
                        android:paddingStart="@dimen/x32"
                        android:paddingTop="@dimen/x40"
                        android:paddingEnd="@dimen/x32"
                        android:paddingBottom="@dimen/x40"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x40"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tag_prevention"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/healthresult_tab_text_prevention"
                        android:textColor="@color/black"
                        android:textSize="@dimen/x48"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_prevention"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x40"
                        android:background="@drawable/bg_diagnose_content_item"
                        android:paddingStart="@dimen/x32"
                        android:paddingTop="@dimen/x40"
                        android:paddingEnd="@dimen/x32"
                        android:paddingBottom="@dimen/x40"
                        android:textColor="@color/black" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x32"
                        android:layout_marginBottom="@dimen/x60"
                        android:background="@drawable/bg_diagnose_content_item"
                        android:orientation="vertical"
                        android:padding="@dimen/x32">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/experts_iv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/img_expert_diagnose"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/experts_title_tv"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/x24"
                                android:text="@string/diagnose2_new"
                                android:textColor="@color/black"
                                android:textSize="@dimen/x32"
                                android:textStyle="bold"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/experts_iv"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/experts_subtitle_tv"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/x24"
                                android:layout_marginTop="@dimen/x10"
                                android:text="@string/diagnose1_new"
                                android:textColor="@color/color_666666"
                                android:textSize="@dimen/x30"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/experts_iv"
                                app:layout_constraintTop_toBottomOf="@+id/experts_title_tv" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <TextView
                            android:id="@+id/ask_experts_tv"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/x80"
                            android:layout_marginTop="@dimen/x24"
                            android:background="@drawable/shape_solid_1fcc98_r_22"
                            android:gravity="center"
                            android:text="@string/plantdetailoverview_planthealth_text_askanexpert"
                            android:textColor="@color/white"
                            android:textSize="@dimen/x36"
                            app:auto_resize="false"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>

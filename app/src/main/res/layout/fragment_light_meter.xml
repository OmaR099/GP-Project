<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gl_bottom_sheet_bg"
    android:orientation="vertical">

    <include
        android:id="@+id/navi_bar"
        layout="@layout/layout_toolbar_light" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/x40"
            android:paddingEnd="@dimen/x40"
            android:paddingBottom="@dimen/x32">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/x80"
                android:layout_marginTop="@dimen/y24"
                android:layout_marginEnd="@dimen/x80"
                android:gravity="center"
                android:text="@string/site_light_text"
                android:textColor="@color/gl_text_color3"
                android:textSize="@dimen/x28" />

            <FrameLayout
                android:id="@+id/fl_light_meter"
                android:layout_width="@dimen/x590"
                android:layout_height="@dimen/x88"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/x32"
                android:background="@drawable/bg_common_btn">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawablePadding="@dimen/x8"
                    android:gravity="center_vertical"
                    android:text="@string/site_light_text_uselightmeter"
                    android:textColor="@color/white"
                    android:textSize="@dimen/x32"
                    app:drawableStartCompat="@drawable/icon_light_meter" />
            </FrameLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/container_light_conditions_list"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y208"
                android:layout_marginStart="@dimen/x40"
                android:layout_marginTop="@dimen/y40"
                android:layout_marginEnd="@dimen/x40"
                android:layout_marginBottom="@dimen/y15"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:outlineSpotShadowColor="@color/colorShadow"
                app:cardCornerRadius="@dimen/x32"
                app:cardElevation="@dimen/x8">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_light_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="0dp"
                    android:paddingEnd="@dimen/x32">

                    <ImageView
                        android:id="@+id/light_iv"
                        android:layout_width="@dimen/x160"
                        android:layout_height="@dimen/x160"
                        android:layout_marginStart="@dimen/x24"
                        android:src="@drawable/icon_light_indirect_sunlight"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/title_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/x24"
                        android:layout_marginTop="@dimen/y56"
                        android:includeFontPadding="false"
                        android:singleLine="true"
                        android:text="Indirect sunlight"
                        android:textColor="@color/black"
                        android:textSize="@dimen/x36"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@+id/iv_selected"
                        app:layout_constraintStart_toEndOf="@+id/light_iv"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/content_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/x24"
                        android:layout_marginTop="@dimen/y12"
                        android:includeFontPadding="false"
                        android:text="@string/site_lightconditions_text_indirectsunlight"
                        android:textColor="@color/gl_text_color3"
                        android:textSize="@dimen/x28"
                        app:layout_constraintEnd_toStartOf="@+id/iv_selected"
                        app:layout_constraintStart_toEndOf="@+id/light_iv"
                        app:layout_constraintTop_toBottomOf="@+id/title_tv" />

                    <ImageView
                        android:id="@+id/iv_selected"
                        android:layout_width="@dimen/x32"
                        android:layout_height="@dimen/x32"
                        android:src="@drawable/icon_selected"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/full_shade_cv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y208"
                android:layout_marginStart="@dimen/x40"
                android:layout_marginTop="@dimen/y30"
                android:layout_marginEnd="@dimen/x40"
                android:layout_marginBottom="@dimen/y15"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:outlineSpotShadowColor="@color/colorShadow"
                app:cardCornerRadius="@dimen/x32"
                app:cardElevation="@dimen/x8">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/full_shade_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="0dp"
                    android:paddingEnd="@dimen/x32">

                    <ImageView
                        android:id="@+id/full_shade_iv"
                        android:layout_width="@dimen/x160"
                        android:layout_height="@dimen/x160"
                        android:layout_marginStart="@dimen/x24"
                        android:src="@drawable/icon_light_full_shade"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/full_shade_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/x24"
                        android:layout_marginTop="@dimen/y56"
                        android:includeFontPadding="false"
                        android:singleLine="true"
                        android:text="@string/full_shade"
                        android:textColor="@color/black"
                        android:textSize="@dimen/x36"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@+id/iv_selected_full_shade"
                        app:layout_constraintStart_toEndOf="@+id/full_shade_iv"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/full_shade_tv2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/x24"
                        android:layout_marginTop="@dimen/y12"
                        android:includeFontPadding="false"
                        android:text="@string/bright_with_little_sunlight"
                        android:textColor="@color/gl_text_color3"
                        android:textSize="@dimen/x28"
                        app:layout_constraintEnd_toStartOf="@+id/iv_selected_full_shade"
                        app:layout_constraintStart_toEndOf="@+id/full_shade_iv"
                        app:layout_constraintTop_toBottomOf="@+id/full_shade_tv" />

                    <ImageView
                        android:id="@+id/iv_selected_full_shade"
                        android:layout_width="@dimen/x32"
                        android:layout_height="@dimen/x32"
                        android:src="@drawable/icon_selected"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/partial_cv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y208"
                android:layout_marginStart="@dimen/x40"
                android:layout_marginTop="@dimen/y30"
                android:layout_marginEnd="@dimen/x40"
                android:layout_marginBottom="@dimen/y15"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:outlineSpotShadowColor="@color/colorShadow"
                app:cardCornerRadius="@dimen/x32"
                app:cardElevation="@dimen/x8">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/partial_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="0dp"
                    android:paddingEnd="@dimen/x32">

                    <ImageView
                        android:id="@+id/partial_iv"
                        android:layout_width="@dimen/x160"
                        android:layout_height="@dimen/x160"
                        android:layout_marginStart="@dimen/x24"
                        android:src="@drawable/icon_light_partial_sun"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/partial_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/x24"
                        android:layout_marginTop="@dimen/y56"
                        android:includeFontPadding="false"
                        android:singleLine="true"
                        android:text="@string/partial_sun"
                        android:textColor="@color/black"
                        android:textSize="@dimen/x36"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@+id/iv_selected_partial"
                        app:layout_constraintStart_toEndOf="@+id/partial_iv"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/partial_tv2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/x24"
                        android:layout_marginTop="@dimen/y12"
                        android:includeFontPadding="false"
                        android:text="@string/about_3_6_hours_sunlight"
                        android:textColor="@color/gl_text_color3"
                        android:textSize="@dimen/x28"
                        app:layout_constraintEnd_toStartOf="@+id/iv_selected_partial"
                        app:layout_constraintStart_toEndOf="@+id/partial_iv"
                        app:layout_constraintTop_toBottomOf="@+id/partial_tv" />

                    <ImageView
                        android:id="@+id/iv_selected_partial"
                        android:layout_width="@dimen/x32"
                        android:layout_height="@dimen/x32"
                        android:src="@drawable/icon_selected"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/full_cv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y208"
                android:layout_marginStart="@dimen/x40"
                android:layout_marginTop="@dimen/y30"
                android:layout_marginEnd="@dimen/x40"
                android:layout_marginBottom="@dimen/y15"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:outlineSpotShadowColor="@color/colorShadow"
                app:cardCornerRadius="@dimen/x32"
                app:cardElevation="@dimen/x8">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/full_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="0dp"
                    android:paddingEnd="@dimen/x32">

                    <ImageView
                        android:id="@+id/full_iv"
                        android:layout_width="@dimen/x160"
                        android:layout_height="@dimen/x160"
                        android:layout_marginStart="@dimen/x24"
                        android:src="@drawable/icon_light_full_sun"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/full_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/x24"
                        android:layout_marginTop="@dimen/y56"
                        android:includeFontPadding="false"
                        android:singleLine="true"
                        android:text="@string/full_sun"
                        android:textColor="@color/black"
                        android:textSize="@dimen/x36"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@+id/iv_selected_full"
                        app:layout_constraintStart_toEndOf="@+id/full_iv"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/full_tv2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/x24"
                        android:layout_marginTop="@dimen/y12"
                        android:includeFontPadding="false"
                        android:text="@string/at_least_6_hours_sunlight"
                        android:textColor="@color/gl_text_color3"
                        android:textSize="@dimen/x28"
                        app:layout_constraintEnd_toStartOf="@+id/iv_selected_full"
                        app:layout_constraintStart_toEndOf="@+id/full_iv"
                        app:layout_constraintTop_toBottomOf="@+id/full_tv" />

                    <ImageView
                        android:id="@+id/iv_selected_full"
                        android:layout_width="@dimen/x32"
                        android:layout_height="@dimen/x32"
                        android:src="@drawable/icon_selected"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

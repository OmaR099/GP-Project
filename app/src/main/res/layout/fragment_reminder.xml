<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e5e5e5"
    android:tag="layout/fragment_reminder_0">

    <View
        android:id="@+id/top_View"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/background_green"
        app:layout_constraintDimensionRatio="375:240"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/bottom_View"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/background_green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_View" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="@string/reminders"
        android:textColor="@color/color_0f4d2e"
        android:textSize="@dimen/_20ssp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/reminders_sub_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x2"
        android:layout_marginEnd="@dimen/x32"
        android:lineHeight="@dimen/x36"
        android:maxWidth="@dimen/x460"
        android:text="@string/reminders_text_careeachplant"
        android:textColor="@color/color_62857a"
        android:textSize="@dimen/_11ssp"
        app:layout_constraintStart_toStartOf="@+id/tv_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_weather"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x22"
        android:layout_marginEnd="@dimen/x32"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/reminders_sub_title_tv"
        app:layout_constraintTop_toTopOf="@+id/tv_title">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_weather_allow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/location_to_allow_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="right"
                android:maxLines="2"
                android:text="@string/reminders_text_allowcontent"
                android:textColor="@color/color_255d41"
                android:textSize="@dimen/_10ssp"
                app:autoSizeMaxTextSize="@dimen/x26"
                app:autoSizeMinTextSize="@dimen/x20"
                app:autoSizeTextType="uniform"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/location_to_allow_btn"
                android:layout_width="@dimen/x148"
                android:layout_height="@dimen/x64"
                android:layout_marginTop="@dimen/x12"
                android:background="@drawable/bg_location_to_allow_btn"
                android:gravity="center"
                android:text="@string/reminders_text_allow"
                android:textColor="@color/color_2db270"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/location_to_allow_notice" />

            <ImageView
                android:id="@+id/ic_weather"
                android:layout_width="@dimen/x128"
                android:layout_height="@dimen/x128"
                android:layout_marginTop="@dimen/x36"
                android:layout_marginEnd="@dimen/x24"
                android:src="@drawable/ic_weather"
                android:visibility="gone"
                app:layout_constraintEnd_toStartOf="@+id/location_to_allow_btn"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="@string/weather" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_weather_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x20"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/text_refresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:singleLine="true"
                android:textColor="@color/color_255d41"
                android:textSize="@dimen/_9ssp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/icon_refresh"
                android:layout_width="@dimen/x32"
                android:layout_height="@dimen/x32"
                android:layout_marginEnd="@dimen/x6"
                android:src="@drawable/icon_weather_refreshing"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/text_refresh"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="@string/refresh" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_weather_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/text_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_0f4d2e"
                android:textSize="@dimen/_20ssp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/text_text_range"
                app:layout_constraintEnd_toEndOf="@+id/text_text_range"
                app:layout_constraintStart_toStartOf="@+id/text_text_range" />

            <TextView
                android:id="@+id/text_text_range"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_62857a"
                android:textSize="@dimen/_11ssp"
                app:layout_constraintEnd_toEndOf="@+id/text_temp"
                app:layout_constraintTop_toBottomOf="@+id/text_temp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ViewStub
        android:id="@+id/vs_container_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout="@layout/fragment_reminder_empty"
        app:layout_constraintTop_toBottomOf="@+id/reminders_sub_title_tv" />
</androidx.constraintlayout.widget.ConstraintLayout>

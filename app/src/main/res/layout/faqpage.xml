<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:tag="layout/activity_search_plant_0">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1000dp">

            <LinearLayout
                android:id="@+id/container_empty_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingStart="32dp"
                android:paddingEnd="@dimen/x64"
                android:visibility="gone">

                <TextView
                    android:id="@+id/empty_tip_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y16"
                    android:textColor="@color/gl_text_color3"
                    android:textSize="14sp" />
            </LinearLayout>

            <Button
                android:id="@+id/button"
                android:layout_width="111dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="23dp"
                android:layout_marginTop="1040dp"
                android:backgroundTint="#9F4CAF50"
                android:hapticFeedbackEnabled="false"
                android:text="@string/back" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1189dp"
                android:padding="0dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="189dp"
                    android:layout_marginBottom="100dp"
                    app:srcCompat="@drawable/nad" />
            </RelativeLayout>
        </FrameLayout>
    </ScrollView>
</LinearLayout>
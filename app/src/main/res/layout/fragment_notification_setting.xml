<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_green"
    android:fitsSystemWindows="true"
    android:tag="layout/fragment_notification_setting_0">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x88"
        android:background="@color/background_green"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/icon_back"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/x40"
            android:layout_marginStart="@dimen/x32"
            android:src="@drawable/ic_arrow_back_black2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/y100"
            android:ellipsize="end"
            android:lineHeight="@dimen/x48"
            android:singleLine="true"
            android:text="@string/notifications"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/x36"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/background_green"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/container_title">

        <TextView
            android:id="@+id/text_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x40"
            android:layout_marginTop="@dimen/x40"
            android:text="@string/notifications_generalnotification_title" />

        <LinearLayout
            android:id="@+id/icon_switch_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x100"
            android:layout_marginTop="@dimen/x20"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/x40"
            android:paddingEnd="@dimen/x40"
            app:layout_constraintTop_toBottomOf="@+id/text_notification">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:lineHeight="@dimen/x44"
                android:text="@string/notifications_generalnotification_text_push"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/x32" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/icon_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x2"
            android:background="@color/gl_divider_color" />

        <LinearLayout
            android:id="@+id/time_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x100"
            android:layout_marginTop="@dimen/x20"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/x40"
            android:paddingEnd="@dimen/x40">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:lineHeight="@dimen/x44"
                android:text="@string/notifications_generalnotification_text_remindtime"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/x32" />

            <TextView
                android:id="@+id/time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gl_text_color3"
                app:drawableEndCompat="@drawable/arrow" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
